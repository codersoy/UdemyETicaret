@model UdemyETicaret.Models.Account.RegisterModels
@{
    ViewBag.Title = "Register";
}

<div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
        @using (Html.BeginForm())
        {
            <div class="panel panel-default">
                <div class="panel-heading text-center">
                    <h2>Register</h2>
                    @if (ViewBag.RegError != null && !string.IsNullOrEmpty((string)ViewBag.RegError))
                    {
                        <small style="color:darkred;">@ViewBag.RegError</small>
                    }
                    else
                    {
                        <small>Please enter e-mail and password.</small>
                    }

                </div>
                <div class="panel-body">

                    <div class="form-group">
                        <center>
                            <img src="http://placehold.it/125x125" class="img-circle img-responsive" />
                        </center>
                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Member.Name, new { @class = "form-control", placeholder = "Lütfen isminizi giriniz.", type = "text" })
                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Member.Surname, new { @class = "form-control", placeholder = "Lütfen soyisminizi yazınız.", type = "text" })
                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Member.Email, new { @class = "form-control", placeholder = "Lütfen e-posta adresinizi yazınız.", type = "email" })
                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Member.Password, new { @class = "form-control", placeholder = "Lütfen şifrenizi yazınız.", type = "password" })
                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(model => model.rePassword, new { @class = "form-control", placeholder = "Lütfen şifrenizi tekrar yazınız.", type = "password" })
                    </div>

                </div>
                <div class="panel-footer text-right">
                    <a href="@Url.Action("Login","Account")" class="btn btn-info">
                        <span class="glyphicon glyphicon-log-in"></span> Login
                    </a>
                    <button type="submit" class="btn btn-success">
                        <span class="glyphicon glyphicon-floppy-saved"></span> Register
                    </button>

                </div>
            </div>


        }


    </div>
</div>


