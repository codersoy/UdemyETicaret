@model UdemyETicaret.Models.i.CommentModels

@{
    string defaultImage = "images/defaultImage.png";
}


<div class="row">
    <div class="col-md-8 col-md-push-4">

        <div class="form-group">
            <h3>Yorumlar</h3>
            <hr />
        </div>

        <div class="form-group">
            <ul class="media-list">
                @foreach (var item in Model.Comments.OrderBy(x => x.AddedDate).ToList())
                {
                    <li class="media">
                        <div class="media-left">
                            <a href="~/Account/Profile/@item.Members.Id">
                                <img style="width:55px" class="media-object img-circle img-thumbnail" src="~/@(string.IsNullOrEmpty(item.Members.ProfileImageName)?defaultImage: item.Members.ProfileImageName)">
                            </a>
                        </div>
                        <div class="media-body">
                            <h4 class="media-heading">@($"{ item.Members.Name} { item.Members.Surname}")</h4>
                            @item.Text
                        </div>
                    </li>
                }

            </ul>
        </div>
        @if (Session["LogOnUser"] != null)
        {
            using (Html.BeginForm("Product", "i", FormMethod.Post))
            {
                @Html.Hidden("Product_Id", Model.Product.Id)
                <div class="form-group">
                    <small style="color:darkred">@ViewBag.MyError</small>
                    <textarea cols="30" rows="3" id="Text" name="Text" class="form-control" placeholder="Yorumunuzu giriniz.." maxlength="255"></textarea>
                </div>

                <div class="form-group text-right">
                    <button type="submit" class="btn btn-success">
                        <span class="glyphicon glyphicon-send"></span> Gönder
                    </button>
                </div>
            }

        }

    </div>
</div>