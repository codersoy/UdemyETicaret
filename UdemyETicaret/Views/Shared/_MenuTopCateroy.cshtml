@model List<UdemyETicaret.DB.Categories>


<ul class="nav navbar-nav">

    <li><a href="#">Link 1</a></li>
    <li class="dropdown">
        <a id="dLabel" role="button" data-toggle="dropdown" data-target="#" href="#"> Kategoriler <span class=" caret"></span></a>

        <ul class="dropdown-menu multi-level" role="menu" aria-labelledby="dropdownMenu">
            @foreach (var cat in Model)
            {
                if (cat.Categories1.Any())
                {
                    <li class="dropdown-submenu">
                        <a href="@Url.Action("Index", "i", new { id = cat.Id})">@cat.Name</a>@*<span class=" caret"></span>*@
                        @_MenuHelper.MenuRecursive(cat.Categories1.ToList())
                    </li>
                }
                else
                {
                    <li><a href="@Url.Action("Index", "i", new { id = cat.Id})">@cat.Name</a></li>
                }

            }
        </ul>
    </li>
</ul>

